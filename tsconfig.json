{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "declaration": true,
        "skipLibCheck": true
    }
}
