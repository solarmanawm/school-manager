{
    "name": "school-manager-web",
    "private": true,
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "frontend:dev": "vite",
        "frontend:build": "vue-tsc -p tsconfig.frontend.json --noEmit && vite build --mode staging --emptyOutDir",
        "frontend:preview": "vite preview",

        "backend:type-check": "tsc -p tsconfig.backend.json --noEmit",
        "backend:type-check:watch": "npm run backend:type-check -- --watch",
        "backend:build": "rimraf ./dist && rimraf ./lib && npm run backend:build:types && npm run backend:build:js && npm run backend:build:config",
        "backend:build:types": "tsc -p tsconfig.backend.json --emitDeclarationOnly",
        "backend:build:js": "babel --plugins @babel/plugin-transform-typescript src/backend --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
        "backend:build:config": "babel --plugins @babel/plugin-transform-typescript config --out-dir dist/config --extensions \".ts,.tsx\" --source-maps inline",
        "backend:dev": "NODE_ENV=development npx nodemon ./src/backend/index.ts",

        "build": "npm run backend:build && npm run frontend:build",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "@types/chart.js": "^2.9.37",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/module-alias": "^2.0.1",
        "@types/morgan": "^1.9.3",
        "@types/underscore": "^1.11.4",
        "@vuelidate/core": "^2.0.0-alpha.42",
        "@vuelidate/validators": "^2.0.0-alpha.30",
        "@vuepic/vue-datepicker": "^3.3.1",
        "@vueuse/core": "^8.7.5",
        "axios": "^0.27.2",
        "chart.js": "^3.8.2",
        "express": "^4.18.1",
        "firebase": "^9.8.4",
        "firebase-admin": "^11.0.0",
        "module-alias": "^2.2.2",
        "pinia": "^2.0.14",
        "tailwindcss": "^3.1.4",
        "underscore": "^1.13.4",
        "vue": "^3.2.37",
        "vue-router": "^4.0.16"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@babel/core": "^7.8.3",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-private-methods": "^7.18.6",
        "@babel/preset-env": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@vitejs/plugin-vue": "^2.3.3",
        "autoprefixer": "^10.4.7",
        "cors": "^2.8.5",
        "helmet": "^5.1.0",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.18",
        "postcss": "^8.4.14",
        "rimraf": "^3.0.2",
        "sass": "^1.53.0",
        "ts-node": "^10.8.1",
        "typescript": "^4.5.4",
        "vite": "^2.9.9",
        "vue-tsc": "^0.34.7"
    }
}
